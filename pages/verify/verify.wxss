.personCenter_list{
		display: flex;
		position: relative;
}
input{
	display:inline-block;
	vertical-align: middle;
	
}
.right{
	width: 74%;
}
.personCenter_list text{
	width: 26%;
	display: inline-block;
}
.radio-group{
	display: inline-block;
	
}
.radio-group label{
	display: inline-block;
	width: 50%;
	margin: 0 0 20rpx 0;
}
.code button{
	width: 140rpx;
	font-size: 30rpx;
	background: #fea531;
	height: 60rpx;
	line-height: 60rpx;
	position: absolute;
	right: 20rpx;
	top:50%;
	margin-top: -30rpx;
}
button[loading][type="primary"][plain] {
	color: #cccccc;
	background: #dedede;
}
button[type="primary"][plain] {
	color: #cccccc;
	background: #dedede;
}
.tips_warn{
	background-color: #E64340;
	display: block;
    position: fixed;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    top: 0;
    left: 0;
    right: 0;
    padding: 10rpx;
    font-size: 30rpx;
    text-align: center;
    color: #FFF;
    z-index: 5000;
    word-wrap: break-word;
    word-break: break-all;
}